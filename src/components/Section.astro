---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"section"> {
  headingId: string;
  title: string;
  spacingClass?: string;
}

const { headingId, title, spacingClass, class: className, ...rest } =
  Astro.props as Props;

const spacing = spacingClass ?? "space-y-8 lg:space-y-16";
---

<section
  aria-labelledby={headingId}
  class:list={[spacing, className]}
  {...rest}
>
  <header class="flex items-baseline justify-center gap-4">
    <h2 id={headingId} class="text-2xl font-semibold m-0!">
      {title}
    </h2>
  </header>

  <slot />
</section>
