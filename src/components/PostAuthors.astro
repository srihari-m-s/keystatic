---
interface Author {
  name: string;
  avatar?: string | null;
}

interface Props {
  authors: Author[];
}

const { authors } = Astro.props as Props;

const hasAuthors = Array.isArray(authors) && authors.length > 0;
---

{
  hasAuthors && (
    <div class="flex flex-wrap items-center gap-4 text-sm text-base-content/80">
      {authors.map((author) => (
        <div class="flex items-center gap-2">
          {author.avatar && (
            <img
              src={author.avatar}
              alt={author.name}
              class="h-8 w-8 rounded-full object-cover"
              loading="lazy"
            />
          )}
          <span>{author.name}</span>
        </div>
      ))}
    </div>
  )
}
