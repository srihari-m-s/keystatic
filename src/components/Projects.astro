---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const headingId = "projects-heading";
---

<section aria-labelledby={headingId} class="space-y-6">
  <header class="flex items-baseline justify-between gap-4">
    <h2 id={headingId} class="text-2xl font-semibold m-0!">
      {title}
    </h2>
  </header>

  <div role="list" class="grid gap-8 lg:gap-20 sm:grid-cols-2 lg:grid-cols-2">
    <slot />
  </div>
</section>
