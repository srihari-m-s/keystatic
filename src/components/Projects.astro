---
import Section from "./Section.astro";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const headingId = "projects-heading";
---

<Section headingId={headingId} title={title}>
  <div role="list" class="grid gap-8 lg:gap-20 sm:grid-cols-2 lg:grid-cols-2">
    <slot />
  </div>
</Section>
