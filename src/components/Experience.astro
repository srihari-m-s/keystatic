---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<section aria-labelledby="experience-heading" class="space-y-6">
  <header class="flex items-baseline justify-between gap-4">
    <h2 id="experience-heading" class="text-2xl font-semibold m-0!">
      {title}
    </h2>
  </header>

  <ul class="timeline timeline-vertical max-md:timeline-compact">
    <slot />
  </ul>
</section>
